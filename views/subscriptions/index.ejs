<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Subscriptions</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Subscription App</a>
      <div class="d-flex">
        <% if (currentUser) { %>
          <span class="navbar-text me-3">
            Hello, <%= currentUser.username %>!
          </span>
          <a href="/logout" class="btn btn-outline-danger">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-primary me-2">Login</a>
          <a href="/register" class="btn btn-outline-success">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h2>My Subscriptions</h2>
    <a href="/subscriptions/new" class="btn btn-primary mb-3">Add New Subscription</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Plan</th>
          <th>Cost</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% subscriptions.forEach(subscription => { %>
          <tr>
            <td><%= subscription.plan %></td>
            <td><%= subscription.cost %></td>
            <td><%= subscription.startDate %></td>
            <td><%= subscription.endDate %></td>
            <td>
              <a href="/subscriptions/<%= subscription._id %>" class="btn btn-info btn-sm">Show</a>
              <a href="/subscriptions/<%= subscription._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <a href="/subscriptions/<%= subscription._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>